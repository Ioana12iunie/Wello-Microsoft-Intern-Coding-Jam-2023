<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wello" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.Wello.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Wello.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Wello.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="custom_card_view" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">48dp</item>
        <item name="cornerSizeTopLeft">48dp</item>
    </style>

    <style name="custom_card_view_all_round" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">48dp</item>
        <item name="cornerSizeTopLeft">48dp</item>
        <item name="cornerSizeBottomRight">48dp</item>
        <item name="cornerSizeBottomLeft">48dp</item>
    </style>

    <style name="custom_card_view_style" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/custom_card_view</item>
    </style>

    <style name="custom_card_view_style_all_round" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/custom_card_view_all_round</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="android:background">@drawable/login_shape</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/lobster</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/lime_pastel</item>
    </style>

    <style name ="Theme.App.SplashScreen" parent = "Theme.SplashScreen" tools:targetApi="31">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowSplashScreenBackground">@android:color/transparent</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_icon_animated</item>
        <item name="postSplashScreenTheme">@style/Theme.Wello</item>
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="33">3000</item>
    </style>
</resources>